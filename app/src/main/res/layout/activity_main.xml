<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/layout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/tumblr"
            android:id="@+id/imageViewback" android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/textViewScore"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" tools:layout_editor_absoluteX="-2dp"
            app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/rocket" tools:layout_editor_absoluteY="74dp"
            tools:layout_editor_absoluteX="39dp" android:id="@+id/imageViewEnemy"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/arw03up" tools:layout_editor_absoluteY="356dp"
            tools:layout_editor_absoluteX="40dp" android:id="@+id/imageViewPlayer"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/arw02up" tools:layout_editor_absoluteY="213dp"
            tools:layout_editor_absoluteX="64dp" android:id="@+id/imageViewBullet"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.316"
    />
    <TextView
            android:text="timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/timerText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.859"/>
    <TextView
            android:text="textViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewScore"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.844"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timerText"
    />

</android.support.constraint.ConstraintLayout>